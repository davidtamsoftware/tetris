{
  "name": "root",
  "description": "Tetris Monorepo",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "build": "lerna run build",
    "postinstall": "npm run bootstrap && npm run build",
    "test": "lerna run test",
    "coveralls": "lerna run coveralls"
  },
  "engines": {
    "node": "8.11.4"
  },
  "author": "David Tam",
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "commitizen": "^3.0.7",
    "coveralls": "^3.0.3",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^23.6.0",
    "lerna": "^3.22.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1"
  },
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*(/__tests__/|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
